<resources>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="buttonStyle">@style/PrimaryButtonStyle</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_shape</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text</item>
    </style>


    <style name="CustomMaterialAlertDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@color/navbar</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="colorAccent">@color/highlight</item>
    </style>

    <style name="ChavesTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/muted_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PagamentosRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="EnviosRadioButton"  parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EnviosText" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>




</resources>
