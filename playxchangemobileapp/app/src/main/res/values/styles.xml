<resources>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="buttonStyle">@style/PrimaryButtonStyle</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_shape</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text</item>
    </style>


    <style name="CustomMaterialAlertDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@color/navbar</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="colorAccent">@color/highlight</item>
    </style>

</resources>
