<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gameCover"
            android:src="@drawable/aa"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/gameInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/gameCover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/quantityLayout"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/gameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Nome do Jogo"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Plataforma"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="PreÃ§o"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Vertical layout for Increment, Quantity, Decrement -->
        <LinearLayout
            android:id="@+id/quantityLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/trashIcon"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <!-- Increment Button with Icon -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/incrementBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Increment"
                app:icon="@drawable/baseline_add_24" <!-- Replace with the desired increment icon -->
            app:iconGravity="icon" <!-- Only icon, no text -->
            app:cornerRadius="12dp"
            app:iconTint="@android:color/background_dark"
            android:background="@android:color/transparent"
            app:strokeWidth="1dp"
            android:gravity="center"/>

            <!-- Quantity TextView -->
            <TextView
                android:id="@+id/quantity"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@android:color/background_dark"
                android:layout_marginVertical="8dp"
                android:textAlignment="center"

            <com.google.android.material.button.MaterialButton
                android:id="@+id/decrementBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Decrement"
                app:icon="@drawable/baseline_remove_24"
            app:iconGravity="icon"
            app:cornerRadius="12dp"
            app:iconTint="@android:color/background_dark"
            android:background="@android:color/transparent"
            app:strokeWidth="1dp"
            android:gravity="center"/>
        </LinearLayout>



        <ImageView
            android:id="@+id/trashIcon"
            android:src="@drawable/baseline_restore_from_trash_24"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="2dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
